<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="10dp">

    <!--   书城界面 查看更多的布局  -->
    <TextView
        android:id="@+id/tv_bookname_bookshop_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:text="书名"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="16sp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="20sp"
        android:layout_marginEnd="5dp"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_bookname_bookshop_more_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="作者"
        android:layout_weight="0"
        android:layout_gravity="center_vertical"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <com.zhlw.azurereader.custom.ShapeTextView
        android:id="@+id/tv_action_add_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:elevation="0dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"
        android:paddingRight="12dp"
        android:paddingBottom="6dp"
        android:text="加入书架"
        android:textColor="@color/colorWrite"
        android:textSize="12sp"
        app:super_cornerRadius="50dp"
        app:super_solidColor="@color/sys_pink"
        app:super_strokeWidth="1dp" />

</LinearLayout>